<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context=".view.DetailCard">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/pokecard" />
    <TextView
        android:id="@+id/tvPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="PokemonName"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imageViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/SpinnerChoice"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="10dp"
        android:text="Exchange this pokemon"
        app:layout_constraintTop_toBottomOf="@id/imageViewTitle"
        app:layout_constraintLeft_toRightOf="@id/tvPokemonName"
        ></Button>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:text="Level : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvPokemonName"

        app:layout_constraintTop_toBottomOf="@id/SpinnerChoice" />

    <TextView
        android:id="@+id/tvAbility"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:text="Ability : "
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintLeft_toRightOf="@id/tvPokemonName"
        app:layout_constraintTop_toBottomOf="@id/tvLevel" />

    <TextView
        android:id="@+id/tvDefense"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:text="Defense : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvPokemonName"
        app:layout_constraintTop_toBottomOf="@id/tvAbility" />

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:text="Speed : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvPokemonName"
        app:layout_constraintTop_toBottomOf="@id/tvDefense" />

    <TextView
        android:id="@+id/tvAttack"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:text="Attack : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvPokemonName"
        app:layout_constraintTop_toBottomOf="@id/tvSpeed" />
    
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageViewSprite"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher"

        app:layout_constraintTop_toBottomOf="@id/tvPokemonName"
        app:layout_constraintStart_toStartOf="parent"


        />


    <View
        android:id="@+id/SeparationLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvAttack"
        />

    <TextView
        android:id="@+id/tvEvolution"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Evolution : "
        android:textColor="#111111"
        app:layout_constraintTop_toBottomOf="@id/SeparationLine"
        />

    <ImageView
        android:id="@+id/imageViewEvolutionSprite1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"

        app:layout_constraintTop_toBottomOf="@id/tvEvolution"

        />

    <ImageView
        android:id="@+id/imageViewEvolutionSprite2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="70dp"
        android:src="@mipmap/ic_launcher"

        app:layout_constraintTop_toBottomOf="@id/tvEvolution"
        app:layout_constraintLeft_toRightOf="@id/imageViewEvolutionSprite1"



        />

    <ImageView
        android:id="@+id/imageViewEvolutionSprite3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="70dp"
        android:src="@mipmap/ic_launcher"

        app:layout_constraintTop_toBottomOf="@id/tvEvolution"
        app:layout_constraintLeft_toRightOf="@id/imageViewEvolutionSprite2"

        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewEvolutionSprite1"/>



</android.support.constraint.ConstraintLayout>
</ScrollView>