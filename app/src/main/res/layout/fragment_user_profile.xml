    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Profil Utilisateur"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/pPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileTitle"
        />
    <TextView
        android:id="@+id/pNomPrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="username"
        app:layout_constraintTop_toBottomOf="@id/profileTitle"
        app:layout_constraintLeft_toRightOf="@id/pPicture"
        />
    <TextView
        android:id="@+id/pEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        app:layout_constraintLeft_toLeftOf="@+id/pNomPrenom"
        app:layout_constraintTop_toBottomOf="@id/pNomPrenom"
        app:layout_constraintLeft_toRightOf="@id/pPicture"
        />



</android.support.constraint.ConstraintLayout>